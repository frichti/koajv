{
  "parser": "espree",
  "env": {
    "es6": true,
    "node": true,
    "mocha": true
  },
  "parserOptions": {
    "ecmaVersion": 2017
  },
  "plugins": [],
  "rules": {
    "array-bracket-spacing": [
      2,
      "never"
    ],
    "block-scoped-var": 2,
    "brace-style": [
      2,
      "1tbs"
    ],
    "camelcase": 0,
    "computed-property-spacing": [
      2,
      "never"
    ],
    "curly": 2,
    "eol-last": 2,
    "eqeqeq": [
      2,
      "smart"
    ],
    "max-depth": [
      1,
      3
    ],
    "max-len": [
      1,
      200
    ],
    "max-statements": [
      1,
      20
    ],
    "new-cap": 1,
    "no-undef": 1,
    "no-extend-native": 2,
    "no-mixed-spaces-and-tabs": 2,
    "no-trailing-spaces": 2,
    "no-unused-vars": 1,
    "no-use-before-define": [
      2,
      "nofunc"
    ],

    "quotes": [
      2,
      "single",
      "avoid-escape"
    ],
    "semi": [
      2,
      "never"
    ],
    "keyword-spacing": [
      2,
      {
        "before": true,
        "after": true
      }
    ],
    "space-unary-ops": 2
  }
}
